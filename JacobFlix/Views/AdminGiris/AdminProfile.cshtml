@using JacobFlix.Models.Siniflar
@model List<AdminGirisi>
@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Admin Profili</h6>
            <a href="">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"><input class="form-check-input" type="checkbox"></th>
                        <th scope="col">Admin Adı</th>
                        <th scope="col">Admin Şifre</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var x in Model)
                        {

                            <td><input class="form-check-input" type="checkbox"></td>
                            <td>@x.KullanıcıAdı</td>
                            <td>@x.Sifre</td>
                        }

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@foreach (var y in Model)
{
    <a href="/AdminGiris/AdminGetir/@y.İD" class="btn btn-outline-info m-2">Admin Profil Güncelle </a>
}